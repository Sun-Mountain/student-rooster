<div class="student-dashboard">
  <div>
    <h1><%= @user.team_name %> Student Dashboard</h1>
  </div>

  <div>
    <%= render partial: 'students/new' %>
  </div>

  <div>
    <% if @team.no_students? %>
      There are no students enrolled in <%= @user.team_name %>.
    <% else %>

      <ul class="student-list list">
        <li class="flex-row-sp-btwn header">
          <div class="flex-row">
            <div class="id">
              ID
            </div>
            <div class="name">
              First Name
            </div>
            <div class="name">
              Last Name
            </div>
          </div>
          <div>
            Delete Student
          </div>
        </li>
        <% @team.student_list.each do |student| %>
          <li class="flex-row-sp-btwn">
            <div class="flex-row">
              <div class="id">
                <%= student.id %>
              </div>
              <div class="name">
                <%= student.first_name %>
              </div>
              <div class="name">
                <%= student.last_name %>
              </div>
              <%= link_to team_student_path(@user.team_id, student.id) do %>
                <div class="flex-row profile-link">
                  <svg class="icon" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                    <use xlink:href="/assets/solid.svg#address-card"></use>
                  </svg> 
                  <div>
                    Student Profile
                  </div>
                </div>
              <% end %>
            </div>
            <div>
              <%= button_to "X", team_student_path(@user.team_id, student.id), data: { confirm: 'Are you sure you want to delete this student?', test: "delete-lesson-#{student.id}" }, method: :delete, class: "delete-btn" %>
            </div>
          </li>
        <% end %>
      </ul>

    <% end %>
  </div>

</div>