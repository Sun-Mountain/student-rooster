<div class="student-dash">
  <div>
    <h1><%= @team.name %> Student Dash</h1>

    <div>
      <div class="form-wrapper">
        <%= form_for @student, url: user_team_students_path(@user.id, @team.id) do |form| %>
          <div class="field">
            <%= form.label :first_name %><br>
            <%= form.text_field :first_name, class: "field-text" %>
          </div>

          <div class="field">
            <%= form.label :last_name %><br>
            <%= form.text_field :last_name, class: "field-text" %>
          </div>

          <div class="field">
            <%= form.label :email %><br>
            <%= form.text_field :email, class: "field-text" %>
          </div>

          <div class="field">
            <%= form.submit "Add Student", class: "form-button"  %>
          </div>
        <% end %>
      </div>
    </div>

    <% if @students.count.zero? %>
      Add your first student!
    <% else %>
    <% end %>
  </div>
</div>