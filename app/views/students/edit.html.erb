<div class="form-container">
  <h2>Edit Student Name or Contact</h2>

  <div class="form-wrapper">
    <%= form_for @student, url: team_student_path do |f| %>
      <div class="field">
        <%= f.label :first_name %><br />
        <%= f.text_field :first_name, class: "field-text" %>
      </div>

      <div class="field">
        <%= f.label :last_name %><br />
        <%= f.text_field :last_name, class: "field-text" %>
      </div>

      <div class="field">
        <%= f.label :contact %><br />
        <%= f.text_field :contact, class: "field-text" %>
      </div>

      <div class="field">
        <%= f.submit "Update Team", class: "form-button", data: {test: "submit"}  %>
      </div>
    <% end %>
  </div>
</div>