<div class="page-container">
  <div class="form-container devise-form-container">
    <div class="form-heading-wrapper">
      <h2>Change your password</h2>
    </div>

    <div class="form-wrapper">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="field">
          <%= f.label :password, "New password" %><br />
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em><br />
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "text-input" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "Confirm new password" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "text-input" %>
        </div>

        <div class="actions">
          <%= f.submit "Change my password", class: "devise-form-btn", data: { test: "submit" } %>
        </div>
      <% end %>

      <div class="links-wrapper">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
