<div class="page-container">
  <div class="form-container devise-form-container">
    <div class="form-heading-wrapper">
      <h2>Forgot your password?</h2>
    </div>

    <div class="form-wrapper">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text-input" %>
        </div>

        <div class="actions">
          <%= f.submit "Send me reset password instructions", class: "devise-form-btn", data: { test: "submit" } %>
        </div>
      <% end %>

      <div class="links-wraper">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
