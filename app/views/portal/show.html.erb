<div class="portal-welcome">
  <% if @user.no_team? %>
    <div class="form-container">
      <div class="form-wrapper">
        <%= form_with model: [ @user, @user.teams.build ] do |form| %>
          <div class="field">
            <%= form.label :name %><br>
            <%= form.text_field :name, class: "field-text" %>
          </div>

          <div class="field">
            <%= form.submit "Create Team", class: "form-button"  %>
          </div>
        <% end %>
      </div>
    </div>
</div>
  <% else %>
    <h2><%= @team.name %> Dashboard</h2>
    <%= link_to "Edit Team", edit_user_team_path(@user.id, @team.id) %>
</div>

<div class="portal-content">
    <div class="lesson-list">
      <% if @team.no_lessons? %>
        NO LESSONS
      <% else %>
        <ul>
          <% @team.lessons.each do |lesson| %>
            <li>
              <%= lesson.name %>
            </li>
          <% end %>
        </ul>
      <% end %>
    </div>

    <div class="form-wrapper">
      <%= form_with model: [ @user, @team, @team.lessons.build ] do |form| %>
        <div class="field">
          <%= form.label :name %><br>
          <%= form.text_field :name, class: "field-text" %>
        </div>

        <div class="field">
          <%= form.submit "Create Lesson", class: "form-button"  %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>