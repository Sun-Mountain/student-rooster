<div class="form-wrapper">
  <h3>Add Roster to <%= @lesson.name %></h3>
  <%= form_for Roster.new, url: team_lesson_rosters_path(@lesson.team_id, @lesson.id) do |form| %>
    <div class="dates">
      <div class="field date-field">
        <%= form.label "Beginning Date" %><br>
        <%= form.date_field :begin_date %>
      </div>

      <div class="field date-field">
        <%= form.label "End Date" %><br>
        <%= form.date_field :end_date %>
      </div>
    </div>

    <div class="form-btn-container">
      <div class="field">
        <%= form.submit "Add Roster", class: "form-button roster"  %>
      </div>

      <div class="field">
        <%= form.submit "Add to All Lessons", class: "form-button roster", name: 'add_to_all' %>
      </div>
    </div>
  <% end %>
</div>