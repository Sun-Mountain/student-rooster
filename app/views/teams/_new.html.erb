<div class="form-container">
  <h2>Create a Team</h2>

  <div class="form-wrapper">
      <%= form_for Team.new, url: teams_path, html: { method: :create } do |f| %>

      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, class: "field-text" %>
      </div>

      <div class="actions">
        <%= f.hidden_field :user_id, value: current_user.id %>
        <%= f.submit "Create Team", class: "form-button" %>
      </div>
    <% end %>
  </div>
</div> 