<div class="form-container">
  <h2>Edit Team</h2>

  <div class="form-wrapper">
    <%= form_for @team, url: team_path do |form| %>
      <div class="field">
        <%= form.label :name %><br>
        <%= form.text_field :name, class: "field-text" %>
      </div>

      <div class="field">
        <%= form.submit "Update Team", class: "form-button", data: {test: "submit"}  %>
      </div>
    <% end %>
  </div>
</div>