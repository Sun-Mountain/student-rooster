<h2>Create your first Lesson!</h2>

  <div class="form-container">
    <div class="form-wrapper">
      <%= form_with model: [ @user, @team, @team.lessons.build ] do |form| %>
        <div class="field">
          <%= form.label :name %><br>
          <%= form.text_field :name, class: "field-text" %>
        </div>

        <div class="field">
          <%= form.submit "Create Lesson", class: "form-button"  %>
        </div>
      <% end %>
    </div>
  </div>