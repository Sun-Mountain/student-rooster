<h3>Create a Lesson</h3>

<div class="form-wrapper">
  <%= form_for Lesson.new, url: team_lessons_path(@user.team.id) do |f| %>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, class: "field-text" %>
    </div>

    <div class="actions">
      <%= f.submit "Add Lesson", class: "form-button", data: {test: "create-lesson"} %>
    </div>
  <% end %>
</div>