<%= render 'teams/header' %>
<%= render 'lessons/header' %>

<div class="page-container">
  <div class="form-container">
    <div class="form-heading-wrapper">
      <h2>Add A New Session</h2>
    </div>

    <div class="form-wrapper">
      <%= form_for @session, url: team_lesson_sessions_path, html: { method: :post } do |f| %>
        <div class="field">
          <%= f.label :name %>
          <div class="input-wrapper">
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "text-input" %>
          </div>
        </div>
        <div class="field">
          <%= f.label :start_date %>
          <div class="input-wrapper">
            <%= f.date_field :start_date, autofocus: true, autocomplete: "start_date", class: "text-input", min: 0.days.ago %>
          </div>
        </div>
        <div class="field">
          <%= f.label :end_date %>
          <div class="input-wrapper">
            <%= f.date_field :end_date, autofocus: true, autocomplete: "end_date", class: "text-input", min: 0.days.ago %>
          </div>
        </div>
        <div class="form-btn-wrapper">
          <%= f.submit "Add Lesson", class: "form-btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>